@model Pagination


<div class="paginatoin-area text-center mt-45">
    @if (Model.TotalPages > 0)
    {
        <ul class="pagination-box">
            @if (Model.CurrentPage >= 2)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Shop" asp-action="Index" asp-route-pg="@(Model.CurrentPage-1)"> <i class="ion-ios-arrow-left"></i></a>
                </li>

            }
            @for (var pge = Model.StartPage; pge <= Model.EndPage; pge++)
            {
                <li class="page-item @(pge==Model.CurrentPage ? " active":"")">
                    <a class="page-link" asp-controller="Shop" asp-action="Index" asp-route-pg="@pge">@pge</a>
                </li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-controller="Shop" asp-action="Index" asp-route-pg="@(Model.CurrentPage+1)"><i class="ion-ios-arrow-right"></i></a>
                </li>

            }
        </ul>
    }

</div>
